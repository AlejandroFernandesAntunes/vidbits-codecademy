<div class="contents-container">
  <div class="video-card">
    <a id='edit-video' href="/videos/{{video._id}}/edit">Edit video</a>
    <form action="/videos/{{video._id}}/deletions" method="POST">
      <input type="hidden" name="_id" value="{{video._id}}">
      <input type="submit" id="delete-video" value="Delete video">
    </form>
    <div class="video-title">
      <h1>{{video.title}}</h1>
    </div>

    <div class="video-player">
      <iframe class="video-player" src="{{video.url}}" frameborder="0" allowfullscreen></iframe>
    </div>

    <div class="video-description">
      <p>{{video.description}} </p>
    </div>
  </div>
</div>