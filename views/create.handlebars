{{#if error}}
  <span>{{error}}</span>
{{/if}}
<div class="contents-container">
  <h2>Save a video</h2>
  <form action="/videos" method="POST">
    <label for="title">Title</label>
    <input type="text" name="title" id="title-input" value="{{video.title}}">
    <label for="description">Description</label>
    <textarea name="description" id= "description-input">{{video.description}}</textarea><br>
    <label for="url">Video URL</label>
    <input type="text" name="url" id="url-input" value="{{video.url}}">
    <input type="submit" id="submit-video" value="Submit">
  </form>
</div>